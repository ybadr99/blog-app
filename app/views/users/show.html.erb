<div class="container">
  <div class="row mt-5">
    <div class="col-md-4">
      <img src="<%= @user.photo %>" alt="User Photo" class="rounded-circle img-fluid">
    </div>
    <div class="col-md-8">
      <h2><%= @user.name %></h2>
      <p><%= @user.posts_counter %> Posts</p>
      <p><strong>Bio:</strong> <%= @user.bio %></p>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="col-md-12">
      <h3>Posts:</h3>
      <% @user.recent_posts.each_with_index do |post, index| %>
        <div class="card mb-3">
            <div class="card-body">
            <h5 class="card-title"><%= " #{post.title} ##{index+1}" %></h5>
            <p class="card-text"><%= post.text %></p>
            <p><strong>Likes:</strong> <%= post.likes_counter %></p>
            <p><strong>Comments:</strong> <%= post.comments_counter %></p>
            </div>

        </div>
      <% end %>
            <div class="text-center mt-3">
            <a href="/users/<%= @user.id %>/posts" class="btn btn-primary">See All Posts</a>
            </div>
    </div>
  </div>
</div>

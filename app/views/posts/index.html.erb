<div class="container">
  <div class="row mt-5">
    <div class="col-md-4">
      <img src="<%= @user.photo %>" alt="User Photo" class="rounded-circle img-fluid">
    </div>
    <div class="col-md-8">
      <h2><%= @user.name %></h2>
      <p><%= @user.posts_counter %> Posts</p>
      <p><strong>Bio:</strong> <%= @user.bio %></p>
    </div>
  </div>
  <% @posts.each_with_index do |post,index| %>
    <div class="card mb-4">
      <div class="card-body">
                    <h5 class="card-title">
              <%= link_to " #{post.title} ##{index+1}", user_post_path(@user, post) %>
            </h5>
        <p class="card-text"><%= post.text %></p>
        <h6>Comments:</h6>
        <% post.comments.each do |comment| %>
          <div class="card">
            <div class="card-body">
              <p class="card-text"><%= comment.text %></p>
              <p><strong>Comment by:</strong> <%= comment.user.name %></p>
            </div>
          </div>
        <% end %>
        <p><strong>Comments:</strong> <%= post.comments_counter %></p>
        <p><strong>Likes:</strong> <%= post.likes_counter %></p>
      </div>
    </div>
  <% end %>
  
<div class="pagination justify-content-center">
  <%= will_paginate @posts, previous_label: 'Previous', next_label: 'Next', class: 'pagination-sm' %>
</div>

  
</div>

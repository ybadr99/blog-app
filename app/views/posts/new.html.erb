<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= @user.photo %>" alt="User Photo" class="rounded-circle img-fluid">
    </div>
    <div class="col-md-8">
      <h2><%= @user.name %></h2>
      <p><%= @user.posts_counter %> Posts</p>
      <p><strong>Bio:</strong> <%= @user.bio %></p>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-8 offset-md-2">
      <%= form_with model: @post, url: user_posts_path(@user), method: :post, class: "comments_form" do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :text, class: "form-label" %>
          <%= f.text_area :text, class: "form-control" %>
        </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
      <% end %>
    </div>
  </div>
</div>
